<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="65dp">

    <ImageView
            android:id="@+id/icon"
            android:src="@drawable/folder" android:layout_margin="5dp"
            android:layout_width="35dp" android:layout_height="35dp"/>

    <TextView
            android:lines="1"
            android:textSize="18sp"
            tools:text="New Zealand" android:gravity="center_vertical"
            android:layout_width="320dp" android:layout_height="55dp"
            android:id="@android:id/text1"/>

</LinearLayout>