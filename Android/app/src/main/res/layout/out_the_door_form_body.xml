<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/FooterBarLayout"
        android:layout_below="@+id/underline">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <catglo.com.widgets.RowLayout
                android:id="@+id/paymentRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/paymentTotal"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/Payment"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textSize="18sp" />

                <catglo.com.widgets.EditTextKeyboardSafe
                    android:id="@+id/paymentTotal_2"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hrule_2"
                    android:hint="@string/Split_Payment"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <catglo.com.widgets.EditTextKeyboardSafe
                    android:id="@+id/tipAmount"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/Tip_Amount"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/split_order"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="@string/SplitOrder"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/cash_check_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/cash_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Cash" />

                    <RadioButton
                        android:id="@+id/check_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Check" />

                    <RadioButton
                        android:id="@+id/credit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Credit" />

                    <RadioButton
                        android:id="@+id/ebt_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/foodStamps" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/cash_check_card2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/paymentTotal_2"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/cash_button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash"></RadioButton>

                    <RadioButton
                        android:id="@+id/check_button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check"></RadioButton>

                    <RadioButton
                        android:id="@+id/credit_button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit" />

                    <RadioButton
                        android:id="@+id/ebt_button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EBT" />
                </RadioGroup>
            </catglo.com.widgets.RowLayout>

            <View
                android:id="@+id/hrule1"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/paymentRow1"
                android:background="#333" />

            <Button
                android:id="@+id/SMSThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hrule1"
                android:layout_margin="1px"
                android:layout_toLeftOf="@+id/CallThem"
                android:drawableTop="@drawable/text_messaging1"
                android:text=""
                android:visibility="gone" />

            <Button
                android:id="@+id/CallThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hrule1"
                android:layout_margin="1px"
                android:drawableTop="@android:drawable/sym_action_call"
                android:text=""
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/delivery_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hrule1"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/currentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:text="13032 178th DR SE HAHAHA"
                    android:textColor="#fffbed09"
                    android:textSize="24sp">

                    <requestFocus />
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/currentCostLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:paddingTop="2dip"
                            android:text="@string/Price" />

                        <TextView
                            android:id="@+id/currentCost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="$22.44"
                            android:textColor="#fffbed09"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/currentWaitLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="2dip"
                            android:text="@string/wait" />

                        <TextView
                            android:id="@+id/currentWait"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="6min"
                            android:textColor="#fffbed09"
                            android:textSize="32sp" />

                        <TextView
                            android:id="@+id/currentWaitMin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="2dip"
                            android:text="@string/minutes" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/hrule4"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/delivery_info"
                android:layout_marginTop="3dip"
                android:background="#333" />

            <LinearLayout
                android:id="@+id/earnPane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hrule4"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tipsEarnedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/tips"
                        android:textColor="#FFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/TipsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:singleLine="true"
                        android:text="$0.00"
                        android:textColor="#FFF"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/MileageEarnedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Mileage"
                        android:textColor="#FFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/MileageEarned"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="$0.00"
                        android:textColor="#FFF"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/DriverEarnedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/DriverEarnings"
                        android:textColor="#FFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/DriverEarnings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="$0.00"
                        android:textColor="#FFF"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/hrule9"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/earnPane"
                android:layout_marginTop="3dip"
                android:background="#FFAAAAAA" />


            <LinearLayout
                android:id="@+id/notesListContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/hrule9"
                android:minHeight="50dp"
                android:orientation="vertical">


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Note"
                android:drawableTop="@drawable/icon_plus"
                android:id="@+id/newNoteButton"
                android:layout_below="@+id/hrule9"
                android:layout_alignBottom="@+id/heading2"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/heading1"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@drawable/underlined"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/hrule9"
                android:layout_toLeftOf="@+id/newNoteButton"
                android:text="This Address" />

            <LinearLayout
                android:id="@+id/notesList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/heading1"
                android:minHeight="50dp"
                android:layout_toLeftOf="@+id/newNoteButton"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/heading2"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/notesList"
                android:background="@drawable/underlined"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:layout_toLeftOf="@+id/newNoteButton"
                android:paddingLeft="20dp"
                android:text="Nearby" />

            <LinearLayout
                android:id="@+id/gpsNotesList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/heading2"
                android:minHeight="50dp"
                android:orientation="vertical"/>



        </RelativeLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/paymentAmountList"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/gray_lt"
        android:orientation="vertical"
        android:visibility="gone">

        <ListView
            android:id="@+id/paymentAmountListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000" />

    </LinearLayout>

</FrameLayout>