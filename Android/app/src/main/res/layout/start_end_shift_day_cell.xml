<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp" >

   
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="@dimen/hour_of_day_marker_width"
        android:layout_height="@dimen/hour_of_day_cell_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/grey_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/timeHourLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="11"
            android:textColor="@color/gray_dk" />

        <TextView
            android:id="@+id/timeAmPmLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="PM"
            android:textColor="@color/gray_dk"
            android:textSize="11sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bodyBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hour_of_day_cell_height"
        android:layout_toRightOf="@+id/linearLayout1"
        android:background="@color/white" >

    </RelativeLayout>
    
     <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_dk" />
     
</RelativeLayout>