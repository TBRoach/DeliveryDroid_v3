<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutTheDoorPaymentFragment" >

    <LinearLayout
        android:id="@+id/earnPane"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hrule5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tipsEarnedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/tips"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/MileageEarnedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/Mileage"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/DriverEarnedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/DriverEarnings"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/earnPane"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TipsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/MileageEarned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/DriverEarnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>