<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
    android:id="@+id/ActionBar"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/left_divider"
    android:gravity="bottom" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="44dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:src="@drawable/icon_back" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-7dp"
        android:layout_toRightOf="@+id/imageView1"
        android:padding="2dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView2"
        android:text="@string/Order_Details"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/headerDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <FrameLayout
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView2" >

    </FrameLayout>

    <Button
        android:id="@+id/setShiftTimesToOrderTimes"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/transparent_button"
        android:text="@string/Edit"
        android:textColor="#EEE" />

</RelativeLayout>

     <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/action_bar_underline_height"
            android:layout_alignParentLeft="true"
            android:background="@color/android_blue_underline" />
    
    <FrameLayout android:id="@+id/fragmentContainer"  android:layout_width="fill_parent"
        android:layout_height="fill_parent"></FrameLayout>

    
    

</LinearLayout>
